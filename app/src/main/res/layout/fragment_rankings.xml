<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stats_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="22dp"
            android:layout_height="31dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_arrow"
            ></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="start"
            android:text="Estatísticas"
            android:textAlignment="textStart"
            android:textColor="#FFF"
            android:textSize="27sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout">
        <TextView
            android:id="@+id/perfil"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:text="Perfil"
            android:fontFamily="@font/montserrat_medium"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:text="Rankings"
            android:background="@drawable/border_bottom"
            android:fontFamily="@font/montserrat_medium"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:layout_marginTop="20dp"
        app:civ_border_color="#000"
        app:civ_border_width="3dp"/>

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="30sp"
        android:text="4º"
        android:textColor="#1E9E84"
        app:layout_constraintBottom_toBottomOf="@id/profilePhoto"
        app:layout_constraintEnd_toStartOf="@id/profilePhoto"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        app:layout_constraintTop_toTopOf="@id/profilePhoto" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="30sp"
        android:text="72"
        android:textColor="#1E9E84"
        app:layout_constraintBottom_toBottomOf="@id/profilePhoto"
        app:layout_constraintStart_toEndOf="@id/profilePhoto"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:layout_constraintTop_toTopOf="@id/profilePhoto"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="12sp"
        android:text="pts"
        android:textColor="#1E9E84"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@id/points"
        app:layout_constraintStart_toEndOf="@id/points"/>
    <Spinner
        android:id="@+id/tiersSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintTop_toBottomOf="@id/profilePhoto"
        app:layout_constraintStart_toEndOf="@id/profilePhoto"
        app:layout_constraintEnd_toEndOf="@id/textView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rUsers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiersSpinner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>